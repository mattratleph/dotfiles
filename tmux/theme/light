# Key Mappings
# remap prefix to Control + a
set -g prefix C-a
unbind C-b
bind C-a send-prefix

# more intuitive split keys
bind | split-window -h
bind _ split-window -v

# force a reload of the config file
unbind r
bind r source-file ~/.tmux.conf

# Usability
set-option -g status-keys vi
set-window-option -g mode-keys vi
set-window-option -g mode-mouse on
set -g default-terminal "screen-256color"

# Display
# colors
set-option -g pane-active-border-fg white
set-option -g pane-border-fg white
set-option -g status-bg white
set-option -g status-fg black
set-window-option -g window-status-current-bg white
set-window-option -g window-status-current-fg black

# status bar settings
set status-interval 1
set -g status-left "#[bg=colour136,fg=white] ⧉ #S #[bg=white,fg=colour136]⮀"
set -g status-left-length 20
set -g status-right "#[bg=white,fg=colour248] #(memusage) #(/usr/local/bin/battery Discharging; /usr/local/bin/battery Charging) #[bg=white,fg=colour136]⮂#[bg=colour136,fg=white] %e %B %I:%M %p "
set-window-option -g window-status-format "#[fg=colour248]#I #W"
set-window-option -g window-status-current-format "#[bg=colour160,fg=white]⮀#[bg=colour160] #[fg=white]#I #W #[bg=white,fg=colour160]⮀"

# Smart pane switching with awareness of vim splits
bind -n C-k run-shell 'tmux-vim-select-pane -U'
bind -n C-j run-shell 'tmux-vim-select-pane -D'
bind -n C-h run-shell 'tmux-vim-select-pane -L'
bind -n C-l run-shell 'tmux-vim-select-pane -R'
bind -n "C-\\" run-shell 'tmux-vim-select-pane -l'

# Bring back clear screen under tmux prefix
bind C-l send-keys 'C-l'
